<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:background="#091241">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/GifMiddle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gifbackround" />
    <ImageView
        android:id="@+id/img_back"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_back"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gilroy_medium"
        android:text="Playing Now"
        android:textColor="@color/white"
        android:textSize="20sp"
        />


    <ImageView
        android:id="@+id/img_song_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txt_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/poster" />

    <ImageView
        android:id="@+id/img_right_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txt_head"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@id/img_song_image"
        android:src="@drawable/poster" />

    <ImageView
        android:id="@+id/img_left_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txt_head"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@id/img_song_image"
        android:src="@drawable/poster" />

    <TextView
        android:id="@+id/txt_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_song_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Believer"
        android:textColor="#EAF0FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_left_image"
        android:layout_marginEnd="70dp"
        android:layout_toStartOf="@id/txt_song_title"
        android:fontFamily="@font/gilroy_medium"
        android:text="Believer"
        android:textColor="#EAF0FF"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/txt_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_right_image"
        android:layout_toEndOf="@id/txt_song_title"
        android:layout_marginStart="70dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Believer"
        android:textColor="#EAF0FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_song_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/gilroy_light"
        android:text="IMAGINE DRAGON"
        android:textColor="#B3A5C0FF"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txt_right_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_right_title"
        android:layout_toEndOf="@id/txt_song_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/gilroy_light"
        android:text="IMAGINE DRAGON"
        android:textColor="#B3A5C0FF"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txt_left_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_left_title"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/txt_song_title"
        android:fontFamily="@font/gilroy_light"
        android:text="IMAGINE DRAGON"
        android:textColor="#B3A5C0FF"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_song_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_like"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/img_like_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_song_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_song_artist"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_baseline_headphones_24" />

    <es.claucookie.miniequalizerlibrary.EqualizerView
        android:id="@+id/equalizer_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/img_volume"
        android:layout_marginStart="136dp"
        android:layout_marginTop="-25dp"
        android:layout_toEndOf="@id/img_volume"
        app:animDuration="3500"
        app:foregroundColor="@color/brown" />

    <ImageView
        android:id="@+id/img_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_volume"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_shuffle" />

    <ImageView
        android:id="@+id/img_not_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_volume"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/img_shuffle"
        android:src="@drawable/ic_repeat"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/img_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_volume"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/img_shuffle"
        android:src="@drawable/ic_baseline_repeat_one_24"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/txt_current_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_volume"
        android:layout_alignLeft="@id/img_volume"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/gilroy_light"
        android:src="@drawable/ic_volume"
        android:textSize="12sp"
       />

    <SeekBar
        android:thumbTint="@color/purple"
        android:progressTint="@color/brown"
        android:id="@+id/timeLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_current_play_time"
        android:layout_toLeftOf="@id/txt_total_play_time"
        android:layout_toRightOf="@id/txt_current_play_time" />

    <TextView
        android:id="@+id/txt_total_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_volume"
        android:layout_alignRight="@id/img_shuffle"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/gilroy_light"
        android:text="volume"
        android:textColor="#B3A5C0FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/playerPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_current_play_time"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <SeekBar
        android:thumbTint="@color/purple"
        android:progressTint="@color/brown"
        android:id="@+id/seek_bar_for_time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLine"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/playerDuration"
        android:layout_toRightOf="@id/playerPosition" />

<TextView
    android:id="@+id/playerDuration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="00:00"
    android:textColor="@color/white"
    android:layout_below="@id/txt_total_play_time"
    android:layout_alignEnd="@id/txt_total_play_time"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"/>
    <ImageView
        android:id="@+id/img_start"
        android:layout_width="20dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginBottom="46dp"
        android:src="@drawable/ic_play" />

    <ImageView
        android:id="@+id/img_pause"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:src="@drawable/ic_pause"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_pause"
        android:layout_alignBottom="@id/img_pause"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@id/img_pause"
        android:src="@drawable/ic_prev" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_pause"
        android:layout_alignBottom="@id/img_pause"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/img_pause"
        android:src="@drawable/ic_next" />

    <ImageView
        android:id="@+id/img_next_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_pause"
        android:layout_alignBottom="@id/img_pause"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/img_next"
        android:src="@drawable/ic_baseline_refresh_24" />

    <ImageView
        android:id="@+id/img_back_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_pause"
        android:layout_alignBottom="@id/img_pause"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@id/img_prev"
        android:src="@drawable/ic_baseline_replay_24" />


</RelativeLayout>